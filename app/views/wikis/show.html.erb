<h1><%= @wiki.title %></h1>
<small>created this <%= time_ago_in_words(@wiki.created_at) %> </small>
<div class="row">
  <div class="col-md-8">
    <h5>
        <%= @wiki.user.email %> |
        <% if @wiki.public? %>
            Public
        <% else %>
            Private
        <% end %>
        <% if @wiki.user == current_user %> 
            - Owner
        <% end %>
    </h5>
    <hr/>
    <h3>
        <%= markdown(@wiki.body) %>
    </h3>
    <br />
    <br />
    <hr />
    <% unless @wiki.collaborators.empty? %>
        <h5>Collaborators</h5>
        <ul>
            <% @wiki.collaborators.each do |collaborator| %>
                <li>
                    <%= User.find_by_id(collaborator.user_id).name %>
                    <% if policy(@wiki).destroy? %>
                        <%= link_to "Delete", [@wiki, collaborator], class: 'btn btn-danger btn-sm pull-right', id: "delete", method: :delete, data: {confirm: 'Are you sure you want to delete this collaborator?'} %>
                    <% end %>
                </li>
            <% end %>
        </ul>
    <% end %>
  </div>
  <div class="col-md-4">
    <% if policy(@wiki).update? %>
      <%= link_to "Edit", edit_wiki_path(@wiki), class: 'btn btn-success' %>
      <%= link_to "Delete Wiki", @wiki, method: :delete, class: 'btn btn-danger',
        data: {confirm: 'Are you sure you want to delete this Wiki?'} %>
    <% end %>
  </div>
</div>