<h1>All Wikis</h1>
<div class="row">
    <div class="col-md-8">
        <% if user_is_authorized_for_creation? %>
            <%= link_to "New Wiki", new_wiki_path, class: "btn btn-primary" %>
            <% @wikis.each do |wiki| %>
                <div class="media">
                    <div class="media-body">
                        <h4 class="media-heading">
                            <%= link_to wiki.title, wiki %>
                        </h4>
                    </div>
                </div>
            <% end %>
        <% end %>
    </div>
</div>
