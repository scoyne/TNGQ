<h2>Account Status: <%= current_user.role.capitalize %> <%= resource_name.to_s.humanize %></h2>

<% if current_user.standard? %>
  <%= button_to "Upgrade", charges_path, class: 'btn btn-success' %>
<% end %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "off" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

    <% if current_user.role == 'standard' || current_user.role == 'admin' %>
      <%= link_to "Upgrade to Premium", new_charge_path %>
    <% else %>
      <%= link_to "Downgrade to Standard", edit_user_registration_path %>
    <% end %>

  <h3>Change My Account</h3>

    <% if current_user.premium? %>
      <%= link_to "Downgrade", downgrade_user_path(current_user),data: { confirm: "Downgrading your account will turn your Private Wikis Public.  Are you sure you wish to continue?" }, class: 'btn btn-warning' %>
    <% end %>


<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>