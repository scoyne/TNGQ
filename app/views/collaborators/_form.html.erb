<h3>Add Collaborators</h3>

<% if @wiki.private? %>
  <%= form_for @collaborator.each do |f| %>
    <%= f.label :collaborator %>
    <%= f.text_field :user, class: 'form-control', placeholder: "Email Address" %>
    <%= f.submit "Save", class: 'btn btn-success' %>
  <% end %>
<% end %>

<div class ="row">
  <div class="col-md-8">
    <% if @wiki.private? && policy(@wiki).destroy?  %>      
        
      <%= form_for @collaborator do |f| %>
        <div class="form-group">
          <%= f.label :collaborators %>
          <%= f.text_field :user, class: 'form-control', placeholder: "Collaborator's Email" %>
          <%= f.submit "Save", class: 'btn btn-success' %>
        </div>  
      <% end %>
        
    <% end %>
  </div>
</div>
